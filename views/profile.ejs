<!DOCTYPE html>
<html>

<head>
  <title>LP login Form</title>
  <link rel="stylesheet" type="text/css" href="/css/profile.css">
  <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
  <script src="signUp/signUP.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>

  <div class="container">
    <div class="login-content">
      <form action="/user/register" method="POST">
        <h2 class="title">Recent Information</h2>
        <div class="input-div one">
          <div class="i">
            <i class="fas fa-user"></i>
          </div>
          <div class="div">
            <div class="inform">Name: <%= user.name %></div>
          </div>
        </div>
        <div class="input-div one">
          <div class="i">
            <i class="fas fa-user"></i>
          </div>
          <div class="div">
            <div class="inform">Email: <%= user.email %></div>
          </div>
        </div>
        <div class="input-div one">
          <div class="i">
            <i class="fas fa-user"></i>
          </div>
          <div class="div">
            <div class="inform">Location: <%= user.location %></div>
          </div>
        </div>
        <div class="input-div one">
          <div class="i">
            <i class="fas fa-user"></i>
          </div>
          <div class="div">
            <div class="inform">Discription: <%= user.discription %></div>
          </div>
        </div>

        <!-- <input type="submit" class="btn" value="Sign in"> -->
      </form>
    </div>
  </div>
  <div class="container">
    <div class="login-content">
      <form action="/user/register" method="POST">
        <h2 class="title">Update Information</h2>
        <div class="input-div one">
          <div class="i">
            <i class="fas fa-user"></i>
          </div>
          <div class="div">
            <label for="name"></label>
            <input type="name" id="name" name="name" class="form-control" placeholder="Your Name" />
          </div>
        </div>
        <div class="input-div one">
          <div class="i">
            <i class="fas fa-user"></i>
          </div>
          <div class="div">
            <label for="email"></label>
            <input type="email" id="email" name="email" class="form-control" placeholder="New Email" />
          </div>
        </div>
        <div class="input-div pass">
          <div class="i">
            <i class="fas fa-lock"></i>
          </div>
          <div class="div">
            <label for="password"></label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Your location" />
          </div>
        </div>
        <div class="input-div pass">
          <div class="i">
            <i class="fas fa-lock"></i>
          </div>
          <div class="div">
            <label for="password2"></label>
            <input type="password" id="password2" name="password2" class="form-control" placeholder="Short description" />
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit Change</button>
        <!-- <input type="submit" class="btn" value="Sign in"> -->
      </form>
    </div>
  </div>
  <script type="text/javascript" src="signUp/js/main.js"></script>
</body>

</html>